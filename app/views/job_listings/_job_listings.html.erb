<table class='table table-striped'>

  <thead>
    <th></th>
    <th>Position</th>
    <th>Salary</th>
    <th>Description</th>
    <th></th>
  </thead>

  <tbody>
    <%- @job_listings.each.with_index(1) do |job_listing, index| %>

      <tr>
        <td><%= index %></td>
        <td><%= job_listing.position %></td>
        <td><%= job_listing.salary %></td>
        <td><%= job_listing.description %></td>
        <td><%= link_to 'Delete', job_listing_path(job_listing), method: :delete, class: 'btn btn-warning' %></td>
      </tr>

    <% end %>
  </tbody>

</table>
